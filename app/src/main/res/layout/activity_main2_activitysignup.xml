<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="@drawable/sh"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vivek.navigationlayouts.MainActivitysignup">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/Rnme"

        android:hint="Name"
        android:singleLine="true"
        android:alpha="0.75"
        android:layout_above="@+id/Remail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/Remail"

        android:hint="Email id"
        android:singleLine="true"
        android:alpha="0.75"
        android:layout_above="@+id/Runme"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/Runme"
        android:hint="User name"
        android:alpha="0.75"
        android:singleLine="true"
        android:layout_above="@+id/Rpass"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/Rpass"
        android:alpha="0.75"
        android:hint="Password"
        android:singleLine="true"
        android:layout_above="@+id/Rcnfpass"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:ems="10"
        android:alpha="0.75"
        android:id="@+id/Rcnfpass"
        android:singleLine="true"

        android:hint="Confirm password"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="signup"
        android:id="@+id/Rsignup"

        android:alpha="0.50"
        android:onClick="onclick"
        android:background="@drawable/xml2"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/Rcnfpass"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
